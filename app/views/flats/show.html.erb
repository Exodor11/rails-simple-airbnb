<h2><%= @flat.name %></h2>
<div><%= @flat.address %></div>
<div><%= @flat.description %></div>
<div><%= "# guests: #{@flat.number_of_guests}" %></div>
<div><%= "Price/ night: #{@flat.price_per_night}" %></div>

<%= link_to "Edit #{@flat.name}", edit_flat_path(@flat) %>
<%= link_to "Delete #{@flat.name}", flat_path(id: @flat.id), method: :delete, data: { confirm: "Are you sure?" } %>

<%= link_to "Back to flats", flats_path %>